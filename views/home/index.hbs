         <a class="btn btn-primary my-1" style="background-color: #0082ca;"target="_blank" href="{{social_linkedin_url}}"><i class="fa fa-linkedin"></i></a>
         <a class="btn btn-primary my-1" style="background-color: #333333;"target="_blank" href="{{social_github_url}}"><i class="fa fa-github"></i></a>
