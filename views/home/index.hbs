  </div>
</div>


{{!-- My Skills --}}
<div id="skills" class="container pt-5">
  <p class="fw-bold fs-3 text">{{my_skills}}</p>
  {{!-- py : padding on y axis top and bottom --}}
  <div class="py-2">
    <div class="p-2 border border-success">
      <p class="fw-bold fs-5 text">{{java}} </p>
      <div class="progress">
        <div class="progress-bar bg-success" role="progressbar" style="width: 90%;" aria-valuenow="90" aria-valuemin="0"
          aria-valuemax="100"></div>
      </div>
    </div>
  </div>
  <div class="py-2">
    <div class="p-2 border border-info">
      <p class="fw-bold fs-5 text">{{mobile_dev}}</p>
      <div class="progress">
        <div class="progress-bar bg-info" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0"
          aria-valuemax="100"></div>
      </div>
    </div>
  </div>
  <div class="py-2">
    <div class="p-2 border border-warning">
      <p class="fw-bold fs-5 text">{{frontend}}</p>
      <div class="progress">
        <div class="progress-bar bg-warning" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0"
          aria-valuemax="100"></div>
      </div>
    </div>
  </div>
  <div class="py-2">
    <div class="p-2 border border-danger">
      <p class="fw-bold fs-5 text">{{agile}}</p>
      <div class="progress">
        <div class="progress-bar bg-danger" role="progressbar" style="width: 95%;" aria-valuenow="95" aria-valuemin="0"
          aria-valuemax="100"></div>
      </div>
    </div>
  </div>
</div>

