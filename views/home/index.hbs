{{!-- Contact form using form control--}}
<div id="contact-me" class="container pt-4">
  <p class="fw-bold fs-3 text">{{tab_contact}}</p>
  <div class="pb-4 col-8">
    <div class="p-3 border border-primary">
      <form>
        <div class="mb-3">
          <label for="fullName" class="form-label">{{full_name}}</label>
          <input type="text" class="form-control" id="fullName">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">{{email}}</label>
          <input type="email" class="form-control" id="email">
        </div>

        <div class="row">
          <div class="col-6">
            <div class="mb-3">
              <label for="phone" class="form-label">{{phone}}</label>
              <input type="phone" class="form-control" id="phone">
            </div>
          </div>
          <div class="col-6">
            <div class="mb-3">
              <label for="company" class="form-label">{{company}}</label>
              <input type="company" class="form-control" id="company">
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="message" class="form-label">{{message}}</label>
          <textarea class="form-control" id="message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">{{contact_form_btn}}</button>
    </div>
    </form>
  </div>
</div>