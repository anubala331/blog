{{!-- Main content --}}
{{!-- using flex --}}
<div id="home" class="container-fluid bg-primary min-vh-100 d-flex justify-content-center">
  <div class="d-flex flex-row align-items-center">
      <div class="flex-column d-flex px-3">
        <img src="/images/main_img.jpeg" alt="Thats someone cool" style="width:300px;height:300px; border-radius: 30%;">
      </div>

      <div class="d-flex flex-column justify-content-evenly px-3">
        <p class="fw-bold fs-3 text text-white ">{{my_heading}}
          <br>
          {{my_role}}
        </p>
        <p class="fw-bold fs-5 text-dark">{{my_designation}}</p>
      </div>

    {{!-- Social media buttons --}}
    <div class="d-flex flex-column justify-content-evenly px-3">
      <a class="btn btn-primary my-1" style="background-color: #3b5998;" target="_blank" href="{{social_fb_url}}"><i class="fa fa-facebook"></i></a>
